.side-bar
  .side-top
    .side-top__items
      .side-top__items__user-name
        = current_user.name
      %ul.side-top__items__icons
        %li
          = link_to new_group_path, class: "create-new-group" do
            = icon('far', 'edit')
        %li
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side-groups
    - current_user.groups.each do |group|
      .side-groups__group
        = link_to edit_group_path(group.id) do
          .side-groups__group__name
            = group.name
          .side-groups__group__new-message
            まだメッセージがありません